module one_bit_full_adder(A, B, Cin, S, Cout);
    input A, B, Cin;
    output S, Cout;
    
    wire sum1, carry1, carry2;
    
    xor XOR1(sum1, A, B);
    xor XOR2(S, sum1, Cin);
    
    and AND1(carry1, A, B);
    and AND2(carry2, sum1, Cin);
    
    or OR1(Cout, carry1, carry2);
    
endmodule
