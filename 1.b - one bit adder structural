module one_bit_full_adder(A, B, Cin, S, Cout);
    input A, B, Cin;
    output S, Cout;
    
	wire int2,int3,int4;    
  	wire int1;
  	xor V1(int1, A, B);
  	xor V2(S, Cin, int1);
    
  	and A1(int2, A, B);
  	and A2(int3, B, Cin);
 	and A3(int4,Cin,A);
    
    or A4(Cout,int2, int3, int4);
endmodule
